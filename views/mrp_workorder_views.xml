<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="panelhex_mrp_workorder_form_view" model="ir.ui.view">
        <field name="name">panelhex.mrp.workorder.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Hexamex Data">
                    <field name="panelhex_data_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="field_type"/>
                            <field name="value_char" optional="show"/>
                           
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="panelhex_workorder_data_form_view" model="ir.ui.view">
        <field name="name">panelhex.workorder.data.form</field>
        <field name="model">panelhex.workorder.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="field_type"/>
                        <field name="value_char"/>
                        <field name="value_float"/>
                        <field name="value_integer"/>
                        <field name="value_boolean"/>
                        <field name="value_many2one"/>
                        <field name="value_date"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="panelhex_workorder_data_search_view" model="ir.ui.view">
        <field name="name">panelhex.workorder.data.search</field>
        <field name="model">panelhex.workorder.data</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="field_type"/>
                <field name="workorder_id"/>
                <filter string="Text Fields" name="char_fields" domain="[('field_type', '=', 'char')]"/>
                <filter string="Numeric Fields" name="numeric_fields" domain="[('field_type', 'in', ['float', 'integer'])]"/>
                <filter string="Date Fields" name="date_fields" domain="[('field_type', '=', 'date')]"/>
                <group expand="0" string="Group By">
                    <filter string="Field Type" name="group_by_field_type" context="{'group_by': 'field_type'}"/>
                    <filter string="Work Order" name="group_by_workorder" context="{'group_by': 'workorder_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>