<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="panelhex_mrp_workorder_form_view" model="ir.ui.view">
        <field name="name">panelhex.mrp.workorder.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Hexamex Data">
                    <field name="panelhex_data_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="field_type"/>
                            <field name="value_char" optional="show" column_invisible="field_type != 'char'" required="field_type == 'char'"/>
                            <field name="value_float" optional="show" column_invisible="field_type != 'float'" required="field_type == 'float'"/>
                            <field name="value_integer" optional="show" column_invisible="field_type != 'integer'" required="field_type == 'integer'"/>
                            <field name="value_boolean" optional="show" column_invisible="field_type != 'boolean'" required="field_type == 'boolean'"/>
                            <field name="value_many2one" optional="show" column_invisible="field_type != 'many2one'" required="field_type == 'many2one'"/>
                            <field name="value_date" optional="show" column_invisible="field_type != 'date'" required="field_type == 'date'"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>