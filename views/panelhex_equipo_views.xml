<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="Hexamex_equipo_form_view" model="ir.ui.view">
        <field name="name">Hexamex.equipo.form</field>
        <field name="model">Hexamex.equipo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                    </group>
                    <notebook>
                        <page string="Centros de Trabajo">
                            <field name="workcenter_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="Hexamex_equipo_tree_view" model="ir.ui.view">
        <field name="name">Hexamex.equipo.tree</field>
        <field name="model">Hexamex.equipo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <record id="action_Hexamex_equipo" model="ir.actions.act_window">
        <field name="name">Equipos Hexamex</field>
        <field name="res_model">Hexamex.equipo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_Hexamex_equipo" name="Equipos Hexamex" action="action_Hexamex_equipo" parent="mrp.menu_mrp_configuration" sequence="100"/>
</odoo>